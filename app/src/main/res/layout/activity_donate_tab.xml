<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonateTab"
    android:background="@drawable/gradient_background">

    <TextView
        android:id="@+id/mainText"
        android:layout_width="match_parent"
        android:layout_height="263dp"
        android:layout_margin="30dp"
        android:gravity="center"
        android:justificationMode="inter_word"
        android:text="Aplikacja Alkolator jest w pełni darmowa i nie zawiera reklam.  Pokaż swoje wsparcie wpłacając dobrowolną dotację!"
        android:textColor="#EEEEEE"
        android:textSize="25dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.472" />

    <TextView
        android:id="@+id/text21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dotacja"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/mainText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/alcolatorBtn2"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/custom_button"
        android:padding="11dp"
        android:text="Wpłać 4 zł"
        android:onClick="DonateButton"
        android:textColor="#FFFFFF"
        app:backgroundTint="#FF9800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainText" />
</androidx.constraintlayout.widget.ConstraintLayout>