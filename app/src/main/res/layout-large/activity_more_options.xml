<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreOptions"
    android:background="@drawable/gradient_background">


    <TextView
        android:id="@+id/Text1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="Wybierz tryb"
        android:textColor="#FFFFFF"
        android:autoSizeTextType="uniform"
        android:padding="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/soberAtBtn"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/custom_button"
        android:onClick="SoberAtClick"
        android:padding="20dp"
        android:text="Ile mogę wypić"
        android:textColor="#FFFFFF"
        app:backgroundTint="#FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text1"
        app:layout_constraintVertical_bias="0.228" />

    <Button
        android:id="@+id/punchBtn"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/custom_button"
        android:onClick="PunchClick"
        android:padding="20dp"
        android:text="Kociołek"
        android:textColor="#FFFFFF"
        app:backgroundTint="#FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/soberAtBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/soberAtBtn"
        app:layout_constraintTop_toBottomOf="@+id/soberAtBtn"
        app:layout_constraintVertical_bias="0.431" />


</androidx.constraintlayout.widget.ConstraintLayout>