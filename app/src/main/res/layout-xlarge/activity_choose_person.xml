<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ChoosePerson">

    <TextView
        android:id="@+id/Text1"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="30dp"
        android:text="Who are You deleting?"
        android:textColor="#FFFFFF"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.012" />


    <Button
        android:id="@+id/Person1"
        android:layout_width="700dp"
        android:layout_height="150dp"
        android:onClick="Person1Click"
        android:layout_marginTop="40dp"
        android:background="@drawable/custom_button"
        android:text="Person1"
        android:textColor="#FFFFFF"
        android:autoSizeTextType="uniform"
        android:padding="30dp"
        android:textStyle="bold"
        app:backgroundTint="#FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Person2"
        android:layout_width="700dp"
        android:layout_height="150dp"
        android:onClick="Person2Click"
        android:background="@drawable/custom_button"
        android:textColor="#FFFFFF"
        android:autoSizeTextType="uniform"
        android:padding="30dp"
        android:text="Person2"
        android:textStyle="bold"
        app:backgroundTint="#FF9800"
        app:layout_constraintBottom_toTopOf="@+id/Person3"
        app:layout_constraintEnd_toEndOf="@+id/Person1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Person1"
        app:layout_constraintTop_toBottomOf="@+id/Person1" />

    <Button
        android:id="@+id/Person3"
        android:layout_width="700dp"
        android:layout_height="150dp"
        android:onClick="Person3Click"
        android:background="@drawable/custom_button"
        android:textColor="#FFFFFF"
        android:autoSizeTextType="uniform"
        android:padding="30dp"
        android:textStyle="bold"
        android:text="Person3"
        app:backgroundTint="#FF9800"
        app:layout_constraintBottom_toTopOf="@+id/Person5"
        app:layout_constraintEnd_toEndOf="@+id/Person2"
        app:layout_constraintStart_toStartOf="@+id/Person2"
        app:layout_constraintTop_toBottomOf="@+id/Person1"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/Person4"
        android:onClick="Person4Click"
        android:layout_width="700dp"
        android:layout_height="150dp"
        android:background="@drawable/custom_button"
        android:text="Person4"
        android:textColor="#FFFFFF"
        android:autoSizeTextType="uniform"
        android:padding="30dp"
        android:textStyle="bold"
        app:backgroundTint="#FF9800"
        app:layout_constraintBottom_toTopOf="@+id/Person5"
        app:layout_constraintEnd_toEndOf="@+id/Person3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Person3"
        app:layout_constraintTop_toBottomOf="@+id/Person3"
        app:layout_constraintVertical_bias="0.488" />

    <Button
        android:id="@+id/Person5"
        android:onClick="Person5Click"
        android:layout_width="700dp"
        android:layout_height="150dp"
        android:background="@drawable/custom_button"
        android:text="Person5"
        android:textColor="#FFFFFF"
        android:autoSizeTextType="uniform"
        android:padding="30dp"
        android:textStyle="bold"
        app:backgroundTint="#FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Person4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Person4"
        app:layout_constraintTop_toBottomOf="@+id/Text1"
        app:layout_constraintVertical_bias="0.767" />

    <Button
        android:id="@+id/add"
        android:layout_width="400dp"
        android:layout_height="130dp"
        android:width="120dp"
        android:height="48dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/language_button"
        android:onClick="AddButton"
        android:padding="10dp"
        android:text="Dodaj"
        android:layout_marginEnd="40dp"
        android:textColor="#fff"
        app:backgroundTint="#FFC107"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text1"
        app:layout_constraintVertical_bias="0.941" />

    <Button
        android:id="@+id/delete"
        android:layout_width="400dp"
        android:layout_height="130dp"
        android:width="120dp"
        android:height="48dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/language_button"
        android:onClick="DeleteButton"
        android:layout_marginStart="40dp"
        android:padding="10dp"
        android:text="UsuÅ„"
        android:textColor="#fff"
        app:backgroundTint="#FFC107"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text1"
        app:layout_constraintVertical_bias="0.94" />


</androidx.constraintlayout.widget.ConstraintLayout>